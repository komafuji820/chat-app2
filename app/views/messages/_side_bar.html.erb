<div class="side-bar-header">
  <div class="side-bar-holder">
    <div class="side-bar__user-name">
      <%= link_to "#{current_user.name}", edit_user_path(current_user.id) %> 
    </div>
    <div class="side-bar__new-chat-btn">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>
</div>

<div class="side-bar-main">
  <% current_user.rooms.each do |room| %>
    <div class="room-name">
      <%= link_to room.name, room_messages_path(room.id) %>
    </div>
  <% end %>
</div>